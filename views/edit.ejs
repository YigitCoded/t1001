<!doctype html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <title><%= appName %> — Düzenle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="/style.css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <h1><%= appName %> — Not Düzenle</h1>
    <form class="card" method="POST" action="/notes/<%= note.id %>">
      <label>Başlık</label>
      <input name="title" value="<%= note.title %>" required />
      <label>İçerik</label>
      <textarea name="content" rows="6"><%= note.content || '' %></textarea>
      <div class="actions">
        <a class="btn secondary" href="/">İptal</a>
        <button type="submit">Kaydet</button>
      </div>
    </form>
  </div>
</body>
</html>
